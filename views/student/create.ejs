




<div class="container my-5 student-form">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <a class="btn btn-primary" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-header">
                    <h2>Add new student</h2>
                </div>
                <div class="card-body">

                    <form action="/student/create" method="post" enctype="multipart/form-data" >
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" class="form-control" type="text">
                        </div>

                        <div class="my-3">
                            <label for="">Email</label>
                            <input name="email" class="form-control" type="text">
                        </div>

                        <div class="my-3">
                            <label for="">Cell</label>
                            <input name="cell" class="form-control" type="text">
                        </div>

                        <div class="my-3">
                            <label for="">Location</label>
                            <select class="form-control" name="location" id="">
                                <option value="selected" hidden>-select-</option>
                                <option value="Mirpur">Mirpur</option>
                                <option value="Uttora">Uttora</option>
                                <option value="Gulshan">Gulshan</option>
                                
                            </select>
                        </div>

                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <img class="preloader" src="" alt="">
                            <br>
                            <label for="upload_photo">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbXBAQ3XaJfjLTzYnhPX4Wz2xRx1gSskPcYgjx5CTtr8w7EJSVmX7TvrueLDqE1te9z0I&usqp=CAU" alt="">
                            </label>
                            <input name="photo" type="file" id="upload_photo">
                        </div>

                        <div class="my-3">
                           
                            <input value="Create" class="w-100 btn btn-primary" type="submit">
                        </div>
                    </form>
                    
                    
                   
                </div>
            </div>
        </div>
    </div>
</div>