

<div class="container my-5 student-table">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <a class="btn btn-primary" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <h2>All unverifyed student</h2>
                    <hr>
                    <table class="table table-striped soro-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Cell</th>
                                <th>Verify</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% students.forEach((stu,index) => { %>

                                <tr class="align-middle">
                                    <td><%= index + 1 %> </td>
                                    <td><%= stu.name %> </td>
                                    <td><%= stu.email %> </td>
                                    <td><%= stu.cell %> </td>
                                    <td><a class="btn btn-sm btn-warning" href="/student/verifyByPhone/<%= stu.id %> ">Verify Phone</a> </td>
                                    <td>
                                        <% if (stu.photo == '../public/images/avatar.png') { %>
                                            <img src= "<%= stu.photo %>"    alt="">
                                         <% } else { %>

                                            <img src= "/public/images/<%= stu.photo %>"    alt="">

                                          
                                        <% } %>
                                    </td>
    
                                    <td>
                                        <a class="btn btn-sm btn-info" href="/student/<%= stu.id %> "><i class="fas fa-eye"></i></a>
                                        <a class="btn btn-sm btn-warning" href="/student/edit/<%= stu.id %>"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger delete-btn" href="/student/delete/<%= stu.id %>"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                             
                            <% }) %>
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>